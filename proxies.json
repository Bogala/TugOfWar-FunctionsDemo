{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "getscores": {
            "matchCondition": {
                "route": "getscores",
                "methods": [
                    "GET",
                    "POST",
                    "OPTIONS"
                ]
            },
            "backendUri": "https://%GET_CURRENT_SCORE_URL%"
        },
        "incrementpoint": {
            "matchCondition": {
                "route": "incrementpoint",
                "methods": [
                    "POST",
                    "OPTIONS"
                ]
            },
            "backendUri": "https://%INCREMENT_POINT_URL%"
        },
        "root": {
            "matchCondition": {
                "route": "/{restOfPath}"
            },
            "backendUri": "https://%mycontainer_uri%/content/{restOfPath}"
        }
    }
}